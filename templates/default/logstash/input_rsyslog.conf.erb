input {
  syslog {
    host => "<%= @rsyslog_bind_host %>"
    port => <%= @rsyslog_bind_port %>
    tags => "<%= @rsyslog_tags %>"
    type => "<%= @rsyslog_type %>"
  }
}

filter {
  if [type] == "syslog" {
    grok {
      overwrite => "message"
      match => [
        "message",
        "%{SYSLOGTIMESTAMP:timestamp} %{IPORHOST:host} (?:%{PROG:program}(?:\[%{POSINT:pid}\])?: )?%{GREEDYDATA:message}"
      ]
    }
    syslog_pri { }
    mutate {
      replace => ["host", "%{logsource}"]
    }
    date {
      # season to taste for your own syslog format(s)
      match => [
        "timestamp",
        "MMM  d HH:mm:ss",
        "MMM dd HH:mm:ss",
        "ISO8601"
      ]
    }
  }
}


